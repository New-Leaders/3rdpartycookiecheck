<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>ContractNumber</field>
        <field>Owner</field>
        <field>RecordType</field>
        <field>Internal_Contact__c</field>
        <field>Procurement_Instrument__c</field>
        <field>Procurement_Type__c</field>
        <field>Description</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>adhoc</type>
            </approver>
        </assignedApprover>
        <label>Budget Manager Approval</label>
        <name>Budget_Manager_Approval</name>
        <rejectionActions>
            <action>
                <name>Contract_has_been_Rejected</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Update_Finance_Vendor_Review_Started</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Legal_Vendor_Review_Started</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>smereste@newleaders.org</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Contract Draft is complete</label>
        <name>Contract_Draft_is_complete</name>
        <rejectBehavior>
            <type>BackToPrevious</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Contract_has_been_Rejected</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Alert_requestor_contract_is_approved</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>lkadetsky@newleaders.org</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Contract approved by counsel</label>
        <name>Contract_approved_by_counsel</name>
        <rejectBehavior>
            <type>BackToPrevious</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>smereste@newleaders.org</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Fully signed contract</label>
        <name>Add_electronic_signature</name>
        <rejectBehavior>
            <type>BackToPrevious</type>
        </rejectBehavior>
    </approvalStep>
    <description>This is the approval process that routes Procurement&#39;s of all types less than or equal to $3,500.</description>
    <emailTemplate>ZBizSolAdminOnly/Contract_Record_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2</booleanFilter>
        <criteriaItems>
            <field>Contract.RecordType</field>
            <operation>equals</operation>
            <value>Procurement</value>
        </criteriaItems>
        <criteriaItems>
            <field>Contract.Cost__c</field>
            <operation>lessOrEqual</operation>
            <value>3500</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approve_Contract</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Request_Approved</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Contract_has_been_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Reject_Contract</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Contract_New_Procurement_Grant_or_Other_Contract_Initiated</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Requestor_Notification_Your_request_has_been_received</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Date_Submitted</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_to_Sent_pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Procurement Approval &lt; or = 3500 21</label>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>Recall_Contract</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
